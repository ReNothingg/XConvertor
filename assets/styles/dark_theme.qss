QWidget {
    background-color: #2b2b2b;
    color: #f0f0f0;
    font-family: "Segoe UI";
}

QMainWindow {
    background-color: #3c3f41;
}

QLabel {
    color: #f0f0f0;
}

QPushButton {
    background-color: #4a4d50;
    border: 1px solid #5a5d60;
    padding: 5px;
    border-radius: 2px;
}

QPushButton:hover {
    background-color: #5a5d60;
}

QPushButton:pressed {
    background-color: #505355;
}